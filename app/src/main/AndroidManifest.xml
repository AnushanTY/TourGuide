<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anushan.tourguide">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PasswordResetActivity" />
        <activity
            android:name=".UserMainDashboard"
            android:label="@string/title_activity_user_main_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".HistoricalSitesOnMapView"
            android:label="@string/title_activity_historical_sites_on_map_view" />
        <activity
            android:name=".OneHistoricalSiteOnMapView"
            android:label="@string/title_activity_one_historical_site_on_map_view" />
        <activity android:name=".HistoricalSiteSearchByName" />
        <activity android:name=".ShowHistoricalSiteForDistrict">

        </activity>
    </application>

</manifest>